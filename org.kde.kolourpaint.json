{
   "id": "org.kde.kolourpaint",
   "runtime": "org.kde.Platform",
   "runtime-version": "5.15",
   "sdk": "org.kde.Sdk",
   "command": "kolourpaint",
   "rename-icon": "kolourpaint",
   "finish-args": [
      "--share=ipc",
      "--share=network",
      "--socket=cups",
      "--socket=x11",
      "--socket=wayland",
      "--env=QT_QPA_PLATFORM=xcb",
      "--device=dri",
      "--filesystem=host"
   ],
   "cleanup": [
      "/include",
      "/lib/cmake",
      "/lib/plugins/designer",
      "/share/man"
   ],
   "modules": [
      {
         "name": "kolourpaint",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=Release"
         ],
         "post-install": [
            "gunzip -S z /app/share/icons/hicolor/scalable/apps/kolourpaint.svgz"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/release-service/21.08.2/src/kolourpaint-21.08.2.tar.xz",
               "sha256": "cdc83bd1c5013c78f95cf211ee1b8ec58363dc6bceb49771f1cca33acc6dc45c"
            }
         ]
      }
   ]
}
