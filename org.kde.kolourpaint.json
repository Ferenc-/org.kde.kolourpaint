{
   "id": "org.kde.kolourpaint",
   "runtime": "org.kde.Platform",
   "runtime-version": "5.12",
   "sdk": "org.kde.Sdk",
   "command": "kolourpaint",
   "rename-icon": "kolourpaint",
   "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--filesystem=xdg-config/kdeglobals:ro",
      "--filesystem=host"
   ],
   "cleanup": [
      "/include",
      "/lib/cmake",
      "/lib/plugins/designer",
      "/share/man"
   ],
   "modules": [
      {
         "name": "kdelibs4support",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "cleanup": [
            "/bin"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/frameworks/5.57/portingAids/kdelibs4support-5.57.0.tar.xz",
               "sha256": "e9d1c06191031b482ea01d891756d125ff32927239c36a3011fc7b8f17aca1b0"
            }
         ]
      },
      {
         "name": "kolourpaint",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/applications/19.04.2/src/kolourpaint-19.04.2.tar.xz",
               "sha256": "75b6deb494b4cbde67835a6500e123b7fe0e55dbd1dbd9b4598627c5d859d11e"
