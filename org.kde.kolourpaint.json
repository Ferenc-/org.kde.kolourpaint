   "runtime-version": "5.12",
   "sdk": "org.kde.Sdk",
   "command": "kolourpaint",
   "rename-icon": "kolourpaint",
   "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--filesystem=xdg-config/kdeglobals:ro",
      "--filesystem=host"
   ],
   "cleanup": [
      "/include",
      "/lib/cmake",
      "/lib/plugins/designer",
      "/share/man"
