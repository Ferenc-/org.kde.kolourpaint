         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/applications/19.08.0/src/kolourpaint-19.08.0.tar.xz",
