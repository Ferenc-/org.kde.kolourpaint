      {
         "name": "kdelibs4support",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "cleanup": [
            "/bin"
         ],
         "sources": [
            {
               "type": "archive",
