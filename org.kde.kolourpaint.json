{
   "id": "org.kde.kolourpaint",
   "runtime": "org.kde.Platform",
   "runtime-version": "5.14",
   "sdk": "org.kde.Sdk",
   "command": "kolourpaint",
   "rename-icon": "kolourpaint",
   "finish-args": [
      "--share=ipc",
      "--share=network",
      "--socket=cups",
      "--socket=x11",
      "--socket=wayland",
      "--env=QT_QPA_PLATFORM=xcb",
      "--device=dri",
      "--filesystem=host"
   ],
   "cleanup": [
      "/include",
      "/lib/cmake",
      "/lib/plugins/designer",
      "/share/man"
   ],
   "modules": [
      {
         "name": "kdelibs4support",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "cleanup": [
            "/bin"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/frameworks/5.69/portingAids/kdelibs4support-5.69.0.tar.xz",
               "sha256": "2e61462c1f128a586b20bcbbe529c7b620e4d46e383066ed78b99e87b38feccc"
            }
         ]
      },
      {
         "name": "kolourpaint",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=Release"
         ],
         "post-install": [
            "gunzip -S z /app/share/icons/hicolor/scalable/apps/kolourpaint.svgz"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/release-service/20.04.0/src/kolourpaint-20.04.0.tar.xz",
               "sha256": "e3f26fa76b171d06c1fac3926ebfb90da47bacb64989527a4c7bef54349b63fb"
            }
         ]
      }
   ]
}
